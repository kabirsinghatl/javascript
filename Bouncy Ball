// position of the ball
var y = 10;
// how far the ball moves every time
var speed = 2;

draw = function() {
    
    background(127, 204, 255);
    if (y < 25) {
    
        speed = 5;
    
    }     
    
    
    
    if (y > 400) {
    
        speed = -5;
    }
    fill(66, 66, 66);
    ellipse(200, y, 50, 50);

    // move the ball
    y = y + speed;
};
